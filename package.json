{
  "name": "gardenia-2025",
  "version": "1.0.0",
  "description": "Event Management Website for Gardenia 2025",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "deploy:hostinger": "chmod +x quick-setup-hostinger.sh && ./quick-setup-hostinger.sh",
    "setup:ssl": "chmod +x setup-ssl.sh && ./setup-ssl.sh",
    "deploy:production": "chmod +x deploy-hostinger.sh && ./deploy-hostinger.sh",
    "setup:event-images": "chmod +x setup-event-images.sh && ./setup-event-images.sh",
    "upload:event-images": "chmod +x upload-event-images.sh && ./upload-event-images.sh"
  },
  "keywords": ["event-management", "mern", "gardenia"],
  "author": "Garden City University",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
